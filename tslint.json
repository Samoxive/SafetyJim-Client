{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "interface-name": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "max-classes-per-file": false,
    "quotemark": [
      true,
      "single",
      "backticks",
      "jsx-double"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}